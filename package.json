{
  "name": "@safis/cms-monorepo",
  "description": "A headless, git-based and GraphQL native CMS",
  "workspaces": [
    "./packages/tsconfig",
    "./packages/github-adapter",
    "./packages/schema",
    "./apps/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "npm-run-all --print-label --parallel dev:**",
    "dev:server": "DOTENV_PATH=$PWD nodemon --exec 'turbo run dev --filter=cms-server'",
    "lint": "eslint . --ignore-path .gitignore",
    "test": "turbo run test"
  },
  "engines": {
    "node": ">=16",
    "npm": ">=8"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.28.0",
    "@typescript-eslint/parser": "^4.28.0",
    "eslint": "^7.29.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-plugin-import": "^2.22.1",
    "nodemon": "^2.0.6",
    "npm-run-all": "^4.1.5",
    "turbo": "^1.4.6",
    "typescript": "4.8.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/safis-io/safis-cms.git"
  },
  "keywords": [
    "safis-cms",
    "cms",
    "git based cms",
    "content management system"
  ],
  "author": {
    "name": "Safis",
    "email": "team@safis.io"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/safis-io/safis-cms/issues"
  },
  "homepage": "https://github.com/safis-io/safis-cms#readme"
}
